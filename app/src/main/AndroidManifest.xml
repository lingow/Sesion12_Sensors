<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.lingoware.lingow.sensors" >

    <uses-permission android:name="android.permission.ACCESS_COARSE_LOCATION" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name=".MainActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".ActivitySensors"
            android:label="@string/title_activity_activity_sensors"
            android:parentActivityName=".MainActivity" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.lingoware.lingow.sensors.MainActivity" />
        </activity>
        <activity
            android:name=".ActivityLocation"
            android:label="@string/title_activity_activity_location"
            android:parentActivityName=".MainActivity" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.lingoware.lingow.sensors.MainActivity" />
        </activity>
        <activity
            android:name=".AcelerometerActivity"
            android:label="@string/title_activity_acelerometer"
            android:parentActivityName=".MainActivity" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.lingoware.lingow.sensors.MainActivity" />
        </activity>
        <activity
            android:name=".ActivityCompass"
            android:label="@string/title_activity_activity_compass"
            android:parentActivityName=".MainActivity" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.lingoware.lingow.sensors.MainActivity" />
        </activity>
    </application>

</manifest>
